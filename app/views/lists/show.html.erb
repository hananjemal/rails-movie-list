<div class="banner" style="background-image:linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(<%=@list.poster_url%>)">
  <div class="container">
    <h2><strong> <%= @list.name.capitalize %></strong></h2>
    <p><%= @list.bookmarks.count %> Movie</p>
  </div>
</div>




<%= link_to "Add Movie", new_list_bookmark_path(params[:id]), class:"btn btn-ghost"%>
<div class="cards">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-trip">
  <img src="<%=bookmark.movie.poster_url%>" />
  <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title%>  <%= bookmark.movie.rating %><i class="fa-solid fa-star" style="color:orange;"></i></h2>
      <p> <%= bookmark.movie.overview %></p>
      <p><i class="fa-solid fa-comment"></i>  <%= bookmark.comment%></p>

    </div>
    <h2 class="card-trip-pricing" ><%= link_to "delete",  bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, style:"text-decoration: none; color:red;"%></h2>
  </div>
  </div>
  <% end %>
</div>
